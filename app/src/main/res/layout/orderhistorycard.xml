<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:paddingBottom="35dp"
    android:layout_height="230dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:padding="5dp">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="4"
        android:id="@+id/order_date"
        android:text="hahahhaahha"
        android:layout_height="match_parent"
        android:textColor="@android:color/black"
        android:gravity="left|center"
        android:layout_marginLeft="5dp" />



            <TextView
          android:layout_width="0dp"
          android:layout_weight="2"
          android:text="zzzzzzz"
          android:id="@+id/order_totalprice"
          android:layout_height="match_parent"
          android:textColor="@android:color/black"
          android:gravity="center|start"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="zzzzzzz"
                android:src="@mipmap/ic_more_vert_black_24dp"
                android:id="@+id/order_chat_complete_overflow"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:textAlignment="gravity" />


        </LinearLayout>
        <View
            android:id="@+id/SplitLine_hor2"
            android:layout_width="match_parent"
            android:layout_height= "1dp"
            android:layout_margin="5dp"
            android:background="#BDBDBD"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/order_item"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/order_instructions"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textColor="@android:color/black" />

        <View
            android:id="@+id/SplitLine_hor3"
            android:layout_width="match_parent"
            android:layout_height= "1dp"
            android:layout_margin="5dp"
            android:background="#BDBDBD"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center|start"
            android:textSize="18sp"
            android:id="@+id/order_details"
            android:text="View Details"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:textColor="#1976D7" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center|end"
                android:textSize="18sp"
                android:id="@+id/order_totaltime"
                android:text="total time"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>